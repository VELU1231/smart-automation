# n8n Configuration
N8N_BASIC_AUTH_ACTIVE=false
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http
WEBHOOK_URL=http://localhost:5678/
GENERIC_TIMEZONE=UTC
N8N_LOG_LEVEL=info
N8N_METRICS=true
N8N_DIAGNOSTICS_ENABLED=false
N8N_VERSION_NOTIFICATIONS_ENABLED=false
N8N_TEMPLATES_ENABLED=true
N8N_ONBOARDING_FLOW_DISABLED=true
N8N_HIRING_BANNER_ENABLED=false
N8N_ENCRYPTION_KEY=smart-automation-2024

# Database Configuration (Development - SQLite)
DB_TYPE=sqlite
DB_SQLITE_DATABASE=/home/node/.n8n/database.sqlite

# Database Configuration (Production - PostgreSQL)
# Uncomment and configure for production
# DB_TYPE=postgresdb
# DB_POSTGRESDB_HOST=postgres
# DB_POSTGRESDB_PORT=5432
# DB_POSTGRESDB_DATABASE=n8n
# DB_POSTGRESDB_USER=n8n
# DB_POSTGRESDB_PASSWORD=n8n_password_2024

# Email Configuration (Update these with your SMTP settings)
# These will be used in n8n email nodes
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_TLS=true

# Contact Form Configuration
ADMIN_EMAIL=admin@yourcompany.com
COMPANY_NAME=Smart Automation

# Redis Configuration (Optional)
REDIS_HOST=redis
REDIS_PORT=6379

# Development Tools
MAILHOG_ENABLED=true